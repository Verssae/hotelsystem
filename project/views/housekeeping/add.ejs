<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/housekeeping/add" method="post" name="form1">

		Room Number
		<select name="number">
				<% if (numbers) { %>
					<% numbers.forEach(function(room_number){ %>
						<option value='<%= room_number.number %>'><%= room_number.number %></option>
					<% }) %>
				<% } %>
		</select>

		<br/>
		Clean status
		<input type="text" name="clean" value="<%= amenity %>" />
		<br/>
		amenity
		<input type="text" name="amenity" value="<%= amenity %>" />
		<br/>
		linen
		<input type="text" name="linen" value="<%= linen %>" />
		<br/>
		ordertake
		<input type="text" name="ordertake" value="<%= ordertake %>" />

		<input type="submit" name="Submit" value="Add" />

</form>




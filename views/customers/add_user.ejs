<%- include ../layouts_user/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<section id="main" class="wrapper">
	<div class="inner">
		<div class="content">
			<form action="/signin" method="post" name="form1">
				<section>
					<div>
						<h1 style='text-align:center;'>회원가입</h1>
						<style>
							input[type=text], input[type=password]{
								width: 300px;
								height: 30px;
								border: 2px solid #aaa;
								border-radius: 4px;
								margin: 3px 0;
								outline: none;
								padding: 8px;
								box-sizing: border-box;
							}
							input[type=text]:focus, input[type=password]:focus{
								border-color: dodgerBlue;
								box-shadow: 0 0 8px 0 dodgerBlue;
							}
						</style>
						<table>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">이름</td>
								<td style="width: 300px;"><input type="text" name="name"  value="<%= name %>" ></td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">아이디</td>
								<td style="width: 300px;"><input type="text" name="id" value="<%= id %>"></td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">비밀번호</td>
								<td style="width: 300px;"><input type="password" name="password" value="<%= password %>" ></td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">Phone</td>
								<td style="width: 300px;"><input type="text" name="phone" value="<%= phone %>"></td>
								<td style="font-size: 1em; color: #9c9c9c;">ex)010-0000-0000</td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">E-mail</td>
								<td style="width: 300px;"><input type="text" name="email" value="<%= email %>"></td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">Nation</td>
								<td style="width: 300px;"><input type="text" name="nation" value="<%= nation %>" ></td>
							</tr>
							<tr style="background: white; border:none;">
								<td style="font-size: 1.2em; width: 150px;">자가용 유무</td>
								<td style="width: 300px;"><input type="checkbox" name="car" value="true"/></td>
							</tr>
						</table>

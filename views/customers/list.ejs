<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>
<section id="main" class="wrapper">
	<div class="inner">
		<div class="content">
			<h1 style='text-align:center;'>고객 목록</h1>
			<table width='80%' border=0>

				<tr style='text-align:left; background-color:#333; color:#fff;'>
					<td>ID</td>
					<td>Name</td>
					<td>Car</td>
					<td>Nation</td>
					<td>Phone</td>
					<td>Email</td>
					<td>Edit</td>
				</tr>

	<!--
		Using FOREACH LOOP for the users array

		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	<% if (data) { %>
	<% data.forEach(function(customer){ %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= customer.name %></td>
					<td><%= customer.car %></td>
					<td><%= customer.nation %></td>
					<td><%= customer.phone %></td>
					<td><%= customer.email %></td>
					<td>
						<div style="float:left">
							<a href='/customers/edit/<%= customer.id %>'>Edit</a> &nbsp;
							
						</div>
					</td>
				</tr>
	<% }) %>
	<% } %>

			</table>
			

		</div>
	</div>
</section>
<p>views/customers/list.ejs</p>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>

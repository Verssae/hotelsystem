<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/reservations/add" method="post" name="form2">

	In Date
	<input type="datetime" name="indate" value="<%= indate %>" />
	<br/>
	Out Date
	<input type="datetime" name="outdate" value="<%= outdate %>" />
	<br/>
	Room Number
	<select name="number">
			<% if (numbers) { %>
				<% numbers.forEach(function(room_number){ %>
					<option value='<%= room_number.number %>'><%= room_number.number %></option>
				<% }) %>
			<% } %>	
	</select>
	
	<br/>
	Customer Name
	
	<%=customers[0].name%>
	<br/>
	
	<br/>
	
	
	<input type="submit" name="Submit" value="Add" />
		
</form>




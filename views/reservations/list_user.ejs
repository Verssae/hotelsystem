<!--
including header content which is common for all pages
-->
<%- include ../layouts_user/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<section id="main" class="wrapper">
	<div class="inner">
		<div class="content">
			<h1 style='text-align:center;'>예약 목록</h1>

			<table width='70%' border=0>

				<tr style='text-align:center; background-color:#333; color:#fff;'>
					<td>Code</td>
					<td>Room No.</td>
					<!-- <td style="text-align: left;">Customer Name</td> -->
					<td style="text-align: left;">Reserve Date</td>
					<td>In Date</td>
					<td>Out Date</td>

					<td>Delete</td>
				</tr>

	<% if (data) { %>
	<% data.forEach(function(reserve){ %>
				<tr style="background-color: white;">
					<td style="width: 5%;"><%=reserve.code %></td>
					<td style="width: 10%; text-align: center;"><%= reserve.number %></td>
					<!-- <td ><a href='/customers/edit/<%=reserve.id %>' style="text-decoration:none; color: #C32AF9;"><%= reserve.name %></a></td> -->
					<td style="width: 20%;"><%= reserve.reservedate %></td>
					<td style="text-align: center;"><%= reserve.indate %></td>
					<td style="text-align: center;"><%= reserve.outdate %></td>


					<td style="width: 8%;">
						<div>

							<form method="post" action="/reservations/delete/<%= reserve.code %>" style="margin-bottom: 0px;margin-right: 0px;">
								<input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" style="padding-left: 10px; padding-right: 10px;"/>
								<input type="hidden" name="_method" value="DELETE" />
							</form>
						</div>
					</td>
				</tr>
	<% }) %>
	<% } %>

			</table>


		</div>
	</div>
</section>
<p>views/reservations/list_user.ejs</p>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
